<% header "Share Advice" %>

<%= form_for(@post, url: posts_path) do |f| %>

<%= f.label :title %><br>
<%= f.text_field :title%>

<br><br>
<%= f.label :content, "What's the best advice you've ever received?" %><br>
<%= f.text_area :content, :cols => "90", :rows => "10"%>
<br><br>

<%= f.submit %>
<% end %>
